<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/mutedGray" />
            <gradient android:angle="-90" android:startColor="@color/mutedGray" android:endColor="@color/mutedGray"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/mutedGray" />
            <solid android:color="@color/mutedGray"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/customDarkBlue" />
            <gradient android:angle="-90" android:startColor="@color/customDarkBlue" android:endColor="#000000" />
        </shape>
    </item>
</selector>